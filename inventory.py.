# ============================
# QUẢN LÝ KHO HÀNG - PROCEDURAL
# ============================

# Danh sách lưu sản phẩm
products = []

def add_product():
    """Nhập sản phẩm mới và lưu vào danh sách."""
    print("\n--- NHẬP HÀNG ---")
    name = input("Tên sản phẩm: ")
    price = int(input("Giá bán: "))
    quantity = int(input("Số lượng nhập: "))

    product = {
        'name': name,
        'price': price,
        'qty': quantity
    }

    products.append(product)
    print("✅ Đã nhập hàng thành công!")

def view_inventory():
    """In toàn bộ sản phẩm trong kho."""
    print("\n--- TỒN KHO HIỆN TẠI ---")
    if not products:
        print("Kho hiện đang trống!")
        return
    for p in products:
        print(f"- {p['name']} | Giá: {p['price']} | SL: {p['qty']}")

def check_low_stock():
    """Kiểm tra sản phẩm có số lượng < 5."""
    print("\n--- CẢNH BÁO HẾT HÀNG ---")
    found = False
    for p in products:
        if p['qty'] < 5:
            found = True
            print(f"⚠️  {p['name']} sắp hết hàng (SL: {p['qty']})")
    if not found:
        print("✔ Không có sản phẩm nào sắp hết hàng.")

def main():
    while True:
        print("\n=== QUẢN LÝ KHO HÀNG ===")
        print("1. Nhập hàng mới")
        print("2. Xem tồn kho")
        print("3. Cảnh báo hết hàng")
        print("4. Thoát")

        choice = input("Chọn chức năng: ")

        if choice == '1':
            add_product()
        elif choice == '2':
            view_inventory()
        elif choice == '3':
            check_low_stock()
        elif choice == '4':
            print("Kết thúc chương trình.")
            break
        else:
            print("❌ Lựa chọn không hợp lệ, vui lòng thử lại.")

if __name__ == "__main__":
    main()

